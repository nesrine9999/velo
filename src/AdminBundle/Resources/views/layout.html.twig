<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ title|default('') }} | Natilait</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script>
        WebFont.load({
            google: {"families":["Montserrat:400,500,600,700","Noto+Sans:400,700"]},
            active: function() {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- Favicon-->
    <link id="favicon" rel="shortcut icon" href="{{ asset('favicon.png')}}" type="image/png" />
    <link rel="apple-touch-icon" sizes="194x194" href="{{ asset('apple-touch-icon.png')}}" type="image/png" />
    <!-- Stylesheet -->
    <link rel="stylesheet" href="{{ asset('assets/plugins/bootstrap/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/elisyam-1.5.css') }}">
    <!-- Tweaks for older IEs--><!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->

    {% block css %}
    {% endblock %}


</head>
<body id="page-top">
<div class="page">
    <!-- Begin Header -->
    <header class="header">
        <nav class="navbar fixed-top">
            <!-- Begin Topbar -->
            <div class="navbar-holder d-flex align-items-center align-middle justify-content-between">
                <!-- Begin Logo -->
                <div class="navbar-header">
                    <a href="#" class="navbar-brand">
                        <div class="brand-image brand-big">
                            <img src="{{ asset('assets/img/final.PNG') }}" alt="logo" class="logo-small">
                        </div>

                    </a>
                    <!-- Toggle Button -->

                    <!-- End Toggle -->
                </div>
                <!-- End Logo -->
                <!-- Begin Navbar Menu -->
                <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center pull-right">

                    <!-- End Notifications -->
                    <!-- User -->
                    <li class="nav-item dropdown"><a id="user" rel="nofollow" data-target="#" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link"><img src="{{ asset('uploads/admin/' ~ app.user.Photo) }}" alt="..." class="avatar rounded-circle"></a>
                        <ul aria-labelledby="user" class="user-size dropdown-menu">
                            <li class="welcome">
                                <a href="" class="edit-profil"><i class="la la-gear"></i></a>
                                <img src="" alt="..." class="rounded-circle">
                            </li>
                            <li>
                                <p class="text-center">{{ app.user.nom ~ ' ' ~ app.user.prenom }}</p>

                            </li>

                            <li class="separator"></li>
                            <li><a rel="nofollow" href="{{ path('fos_user_security_logout') }}" class="dropdown-item logout text-center"><i class="ti-power-off"></i></a></li>
                        </ul>
                    </li>
                    <!-- End User -->
                </ul>
                <!-- End Navbar Menu -->
            </div>
            <!-- End Topbar -->
        </nav>
    </header>
    <!-- End Header -->
    <!-- Begin Page Content -->
    <div class="page-content d-flex align-items-stretch">
        <div class="default-sidebar">
            <!-- Begin Side Navbar -->
            <nav class="side-navbar box-scroll sidebar-scroll">

                <!-- Begin Main Navigation -->

                <ul class="list-unstyled">
                    <li>
                        <a href="">
                            <i class="la la-home"></i>
                            <span>Accueil</span>
                        </a>
                    </li>
                    {# <li>
                        <a href="{{ path('admin_stat') }}">
                            <i class="la la-bar-chart"></i>
                            <span>Statistique</span>
                        </a>
                    </li> #}
                    <li>
                        <a href="{{ path('Affiche') }}">
                            <i class="la la-newspaper-o"></i>
                            <span>Actualités</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_AfficherUser') }}">
                            <i class="la la-users"></i>
                            <span>Utilisateurs</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_AfficherUser') }}">
                            <i class="la la-calendar"></i>
                            <span>Evenements</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('Reparateurs') }}">
                            <i class="la la-calendar"></i>
                            <span>Reparateurs</span>
                        </a>
                    </li>



                </ul>


                <!-- End Main Navigation -->
            </nav>
            <!-- End Side Navbar -->
        </div>
        <!-- End Left Sidebar -->
        <div class="content-inner">
            <div class="container-fluid">
                <!-- Begin Page Header-->
                <div class="row">
                    <div class="page-header">
                        <div class="d-flex align-items-center">
                            <h2 class="page-header-title">{{ title|default('Page') }}</h2>
                        </div>
                    </div>
                </div>
                <!-- End Page Header -->
                <!-- Begin Row -->

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}
                {% endblock %}
                {% block modifier %}
                {% endblock %}
                {% block affiche %}
                {% endblock %}
                {% block Reparateurs %}

                {% endblock %}
                <!-- End Row -->
            </div>
            <!-- End Container -->
            <a href="#" class="go-top"><i class="la la-arrow-up"></i></a>
        </div>
        <!-- End Content -->
    </div>
    <!-- End Page Content -->
</div>
<!-- Begin Vendor Js -->
<script src="{{ asset('assets/plugins/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('assets/plugins/bootstrap/bootstrap.min.js') }}"></script>
<!-- End Vendor Js -->
<!-- Begin Page Vendor Js -->
<script src="{{ asset('assets/plugins/nicescroll/nicescroll.min.js') }}"></script>
<script src="{{ asset('assets/js/app.js') }}"></script>
<!-- End Page Vendor Js -->
<script>
    $('.delete-button').on('click',function(e){
        e.preventDefault();
        if (window.confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?')) {
            location.href = this.href;
        }
    });
</script>
{% block js %}
{% endblock %}
</body>
</html>